# ========================================
# AstroYorumAI - Render.com Environment
# ========================================
# This file contains Render.com specific environment variables
# Copy these variables to your Render.com dashboard

# ========================================
# Core Flask Configuration
# ========================================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-ultra-secure-production-secret-key-here

# ========================================
# Server Configuration
# ========================================
PORT=8080
HOST=0.0.0.0
WEB_CONCURRENCY=4
PYTHONUNBUFFERED=1

# ========================================
# Database Configuration
# ========================================
# Render PostgreSQL Database URL (will be provided by Render)
DATABASE_URL=postgresql://username:password@hostname:port/database

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGINS=https://astroyorumai.com,https://www.astroyorumai.com,https://astroyorumai.render.com

# ========================================
# Payment Integration
# ========================================
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ========================================
# AI Integration
# ========================================
OPENAI_API_KEY=sk-your_openai_api_key_here

# ========================================
# Monitoring & Logging
# ========================================
SENTRY_DSN=https://your_sentry_dsn_here
LOG_LEVEL=INFO

# ========================================
# Application Configuration
# ========================================
API_VERSION=2.1.3
APP_NAME=AstroYorumAI
APP_VERSION=2.1.3

# ========================================
# Render.com Specific Variables
# ========================================
# These are automatically provided by Render
# RENDER_EXTERNAL_URL (automatically set by Render)
# RENDER_EXTERNAL_HOSTNAME (automatically set by Render)
# RENDER_SERVICE_ID (automatically set by Render)
# RENDER_SERVICE_NAME (automatically set by Render)

# ========================================
# Health Check Configuration
# ========================================
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=30

# ========================================
# Security Configuration
# ========================================
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
